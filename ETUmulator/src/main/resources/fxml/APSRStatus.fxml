<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" spacing="5.0" stylesheets="@../styles/APSRStatus.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kasirgalabs.etumulator.navigator.APSRStatus">
    <children>
        <Label text="N">
            <tooltip>
                <Tooltip contentDisplay="CENTER" text="Negative flag" />
            </tooltip>
        </Label>
        <Label fx:id="negative" alignment="CENTER" styleClass="flag" text="0">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
            <tooltip>
                <Tooltip contentDisplay="CENTER" text="Negative flag" />
            </tooltip>
        </Label>
        <Label text="Z">
            <tooltip>
                <Tooltip contentDisplay="CENTER" text="Zero flag" />
            </tooltip>
        </Label>
        <Label fx:id="zero" alignment="CENTER" styleClass="flag" text="0">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
            <tooltip>
                <Tooltip contentDisplay="CENTER" text="Zero flag" />
            </tooltip>
        </Label>
        <Label text="C">
            <tooltip>
                <Tooltip contentDisplay="CENTER" text="Carry flag" />
            </tooltip>
        </Label>
        <Label fx:id="carry" alignment="CENTER" styleClass="flag" text="0">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
            <tooltip>
                <Tooltip contentDisplay="CENTER" text="Carry flag" />
            </tooltip>
        </Label>
        <Label text="V">
            <tooltip>
                <Tooltip contentDisplay="CENTER" text="Overflow flag" />
            </tooltip>
        </Label>
        <Label fx:id="overflow" alignment="CENTER" styleClass="flag" text="0">
            <HBox.margin>
                <Insets />
            </HBox.margin>
            <tooltip>
                <Tooltip contentDisplay="CENTER" text="Overflow flag" />
            </tooltip>
        </Label>
    </children>
</HBox>
